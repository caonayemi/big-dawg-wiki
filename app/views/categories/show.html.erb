<div class="row">
	<div class="col s8 offset-s2">
		<h1 class="brown-text text-darken-2">Articles by Category: <%= @category.name %></h1>
	</div>
</div>

<!-- This is the div for the category "sidebar"-->
<div>
  <p>All Categories:</p>
  <ul>
    <% @categories.each do |category| %>
      <li><a href="/categories/<%=category.to_params%>"><%= category.name %></a></li>
    <% end %>
  </ul>
</div>


<% @category.versions.each do |version| %>
<div class="divider"></div>
	<div class="section">
		<h4><%= link_to version.article.title, show_recent_path(version.article.slug), class: "index_li green-text text-darken-2" %></h4>
	</div>
<% end %>
