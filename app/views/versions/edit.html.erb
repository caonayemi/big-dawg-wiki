<h1>Edit Version For <%= @version.article.title %></h1>
  <%= form_for :version, url: version_path(@version.article,@version) do |f| %>
  <%= f.label :content %>
  <%= f.text_field :content%>
  <%= f.label :footnotes %>
  <%= f.text_field :footnotes%>
  <%= f.submit %>
<% end %>
<form action="/articles/<%= @version.article.to_param %>" method="post">
  <input type="hidden" name="_method" value="delete">
  <input type="submit" value="Delete Article">
</form>
<p>Caution: Once you delete an article, it will be permanently removed from the website.</p>

<% if @version.is_published == false %>
  <a href="/articles/<%= @version.article.to_param %>/versions/<%= @version.id %> >/publish">Publish Article</a>
  <p>Caution: Once you publish an article, the current version can no longer be edited.</p>
<% end %>
