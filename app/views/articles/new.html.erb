<div class="card-panel brown lighten-5 large z-depth-1">
	<div class="row">
		<div class="col s10 offset-s2">
			<h1 class="brown-text text-darken-2">Create A New Article</h1>
			<p class="green-text text-darken-1">Please consider the title carefully. Once it is saved, it cannot be edited.</p>
		</div>
	</div>

	<div class="row">
		<%= form_for @article, html: {class: "col s8 offset-s2"} do |f| %>
		  <%= f.label :title %>
		  <%= f.text_field :title %>
		  <button class="btn waves-effect green darken-1 waves-light" type="submit" name="action">Create Article
		     <i class="material-icons">send</i>
		   </button>
		<% end %>
	</div>
</div>