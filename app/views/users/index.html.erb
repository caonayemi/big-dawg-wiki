<h3 class= "center">All users</h3>

<table class="bordered striped responsive-table">
  <tr>
    <th>Username</th> <th>Status</th> <th></th>
  </tr>
  <% @dawgs.each do |dawg| %>
    <tr>
      <td><%= dawg.username %></td> <td><%= dawg.permission_level %></td>
      <% if dawg.permission_level != "big_dawg" %>
        <td><a href="/users/<%=dawg.id %>/upgrade">upgrade user</a></td>
      <% else %>
        <td></td>
      <% end %>
    </tr>
  <% end %>
</table>