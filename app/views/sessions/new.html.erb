<h1>Log in</h1>
<div>
  <% if @errors %>
    <h2><%= @errors %></h2>
  <% end %>
  <div>
    <%= form_for(:sessions, url: login_path) do |f| %>
      <%= f.label :username %>
      <%= f.text_field :username %>
      <%= f.label :password %>
      <%= f.password_field :password %>
      <%= f.submit 'Log in' %>
    <% end %>
    <p>
      New User? <%= link_to 'Sign Up Now', :signup %>
    </p>
  </div>
</div>
