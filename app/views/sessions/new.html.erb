<div class="card-panel brown lighten-5 large z-depth-1">
  <div class="row">
  <div class="col s6 offset-s3">
    <h1>Login</h1>
  </div>
  </div>

  <% if @errors %>
    <div class="row">
      <div class="col s6 offset-s3">
        <h4><%= @errors %></h4>
      </div>
    </div>
  <% end %>

  <div class="row">
    <%= form_for(:sessions, :html => {class: "col s6 offset-s3" }, url: login_path) do |f| %>
      <div class="row">
        <div class="input-field col s12">
          <%= f.text_field :username, placeholder: "Username" %>
          <%= f.label :username %>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s12">
          <%= f.password_field :password, placeholder: "Password at least 6 characters long" %>
          <%= f.label :password %>
        </div>
      </div>

      <div class="row">
        <div class="col s6 offset-s3">
          <button class="btn waves-effect green darken-1 waves-light" type="submit" name="action">Submit
             <i class="material-icons">send</i>
           </button>
        </div>
      </div>
    <% end %>
  </div>

  <div class="row">
    <div class="col s6 offset-s3">
      <p>New User? <%= link_to 'Sign Up Now', :signup, class: "purple-text" %></p>
    </div>
  </div>
</div>

